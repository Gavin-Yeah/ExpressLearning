<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="header">
    <div class="navheader">lcbooks</div>
    <div class="nav">
        <div class="navList">
            <div class="link"><a href="/">首页</a></div>
            <% for(let i = 0; i < category.length;i++){ %>
            <div class="link"><a href="/category/<%= category[i].id %>/page/1"><%= category[i].name %></a></div>
            <% } %>

            <div class="search">

                <input type="text" id="search">
                <button class="searchBtn"><span class="icon"></span><span class="text">search</span></button>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="content">

        <div class="bookList">
            <% for(let i = 0; i < books.length;i++){ %>
            <a href="/books/<%- books[i].id %>">
                <div class="bookItem">
                    <img class='bookImg' src="<%- books[i].bookimg %>" alt="">
                    <h3 class="title"><%- books[i].bookname %></h3>
                    <p class="author"><%- books[i].author %></p>
                    <div class="category"><%- books[i].category %></div>
                </div>
            </a>
            <% } %>
        </div>
        <div class="erweima">
            <img src="/img/cirko.png" alt="">
        </div>
    </div>
    <div class="pagination">
        <% if(page>1){%>
        <div class="pageBtn">
            <a href="/page/<%=(page-1)%>">previous</a>
        </div>
        <%}%>
        <div class="pageBtn">
        <% for(let i=startPage;i<=endPage;i++){ %>
        <a <% if(page==i){ %> class="active" <% } %> href="/page/<%=i%>" >
            <%=i%> </a>
        <%}%>
        <% if(page<pageAll){%>
        </div>
        <div class="pageBtn">
            <a href="/page/<%=(page+1)%>">next</a>
        </div>
        <%}%>
        <div class="allCount">total <%=pageAll%></div>
    </div>
</div>
<script type="text/javascript">
    const searchBtn = document.querySelector('.searchBtn');
    searchBtn.addEventListener('click',function(e) {
        console.log(this);
        const value = document.querySelector('#search').value;
        location.href='/search/'+value+'/page/1';
    })
</script>
</body>
</html>